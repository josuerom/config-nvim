{
  "snippets.userSnippetsDirectory": "~/AppData/Local/nvim/UltiSnips",
  "snippets.shortcut": "S",
  "snippets.autoTrigger": true,
  "snippets.triggerCharacters": [],
  "snippets.loadFromExtensions": true,
  "snippets.textmateSnippetsRoots": ["~/.config/nvim/UltiSnips/textmate"],
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.usePythonx": true,
  "snippets.ultisnips.directories": ["UltiSnips"],
  "snippets.snipmate.enable": true,
  "snippets.snipmate.author": "Josué Romero",
  "snippets.ultisnips.usePythonx": false,
  "snippets.priority": 1,

  {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"],
      "snippets.ultisnips.directories": [
        "UltiSnips",
        "SirVer/ultisnips"
      ]
  },

  "java.configuration.runtimes": [
    {
      "name": "JavaSE-15",
      "path": "D:\Program Files\Java\jdk-15.0.2\bin\javac.exe",
      "default": true
    }
  ],

  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.comments.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.saveActions.organizeImports": true,
  "java.selectionRange.enabled": true,

  "typescript.autoClosingTags": true,
  "javascript.autoClosingTags": true,

  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": true,

  "coc.preferences.formatOnSaveFiletypes": [
		"html",
    "css",
    "markdow",
    "javascript",
    "json",
		"python",
    "java",
		"typescript"
  ],
  "explorer.width": 30,
  "explorer.file.reveal.auto": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] [root]",
  "explorer.keyMappings.global": {
    "v": "open:vsplit"
  },

  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },

  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.source.around.firstMatch": false,
  "coc.source.file.ignoreHidden": false,
  "coc.source.file.priority": 60,
  "coc.source.buffer.priority": 50,
  "diagnostic-languageserver.debug": true,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.format": "%message",
  "diagnostic.virtualText": false,
  "diagnostic.checkCurrentLine": true,
  "yank.priority": 10,

  "signature.target": "echo",
  "suggest.highPrioritySourceLimit": 10,
  "suggest.languageSourcePriority": 95,
  "suggest.lowPrioritySourceLimit": 90,
  "suggest.timeout": 5000,
  "suggest.asciiCharactersOnly": true,
  "suggest.autoTrigger": "always",
  "suggest.localityBonus": true,
  "suggest.fixInsertedWord": true,
  "suggest.enablePreselect": true,
  "suggest.removeDuplicateItems": true,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.defaultSortMethod": "alphabetical",
  "suggest.numberSelect": false,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.detailField": "menu",
  "suggest.keepCompleteopt": false,
  "suggest.noselect": false,
  "suggest.triggerCompletionWait": 30
}
