{
  "coc.preferences.formatOnSaveFiletypes": ["html", "css", "markdown", "javascript", "java",  "python", "vim",  "json"], 
  "editor.fontFamily": "Lilex",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "suggest.noselect": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "D:\\Program Files\\Java\\jdk-11.0.13",
      "default": true
    },
    {
      "name": "JavaSE-8",
      "path": "C:\\Program Files\\Java\\jre1.8.0_321"
    }
  ],

  "codeLens.enable": true,
  "java.referencesCodeLens.enable": true,
  "java.completion.enable": true,
  "java.implementationsCodeLens.enable": true,
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.comments.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.saveActions.organizeImports": true,
  "java.selectionRange.enabled": true,

  "typescript.autoClosingTags": true,
  "javascript.autoClosingTags": true,
  "snippets.priority": 1,
  "snippets.ultisnips.enable": false,
  "snippets.ultisnips.usePythonx": false
}
